						<AbsDimension x="150" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT">
							<Offset>
								<AbsDimension x="4" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<!-- + / - icon -->
				<Texture name="$parentIcon" file="">
