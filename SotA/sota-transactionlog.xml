			</OnLoad>
		</Scripts>
		<NormalTexture name="$parentBG">
			<Color r="0.0" g="0.0" b="0.0" a="0.0"/>
		</NormalTexture>
	</Button>

	<!-- template for a Player entry in the Transaction UI (4 columns) -->
	<Button name="SOTA_FourPlayerTemplate" hidden="true" virtual="true">
