<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Script file="sota-raidqueue.lua" />

	<!-- template for a Player entry in the RaidQueue -->
	<Button name="SOTA_PlayerTemplate" hidden="true" virtual="true">
		<Size>
			<AbsDimension x="150" y="16"/>
		</Size>
		<Layers>
			<Layer>
				<!-- Player name -->
				<FontString name="$parentName" justifyH="LEFT" inherits="GameFontNormal">
					<Size>
						<AbsDimension x="70" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT">
							<Offset>
								<AbsDimension x="4" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="1" g="1" b="1" />
				</FontString>
				<!-- Guild rank -->
				<FontString name="$parentRank" justifyH="RIGHT" inherits="GameFontNormal">
					<Size>
						<AbsDimension x="74" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentName"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				PlaySound("igMainMenuOptionCheckBoxOn")
				SOTA_OnQueuedPlayerClick(this, arg1)
			</OnClick>
			<OnEnter>
				getglobal(this:GetName().."BG"):SetVertexColor(1, 1, 1, 1)
			</OnEnter>
			<OnLeave>
				getglobal(this:GetName().."BG"):SetVertexColor(0.7, 0.7, 0.7, 0.7)
			</OnLeave>
			<OnLoad>
				this:RegisterForClicks(
				"LeftButtonDown",
				"RightButtonDown"
				)
				this:GetScript("OnLeave")(this)
			</OnLoad>
		</Scripts>
		<NormalTexture name="$parentBG" />
	</Button>

	<!--	Raid Queue Frame	-->
	<Frame name="RaidQueueFrame" inherits="SOTAFrame">
		<Layers>
			<Layer>
				<FontString name="$parentTitle" inherits="GameFontNormal" text="SotA Raid Queue">
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="-6" y="233"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<!-- Queued Tanks Frame -->
			<Frame name="$parentTankList">
				<Size>
					<AbsDimension x="163" y="162" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="17" y="-92" />
						</Offset>
					</Anchor>
				</Anchors>
				<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
				</Backdrop>
			</Frame>
			<!-- Queued melee frame -->
			<Frame name="$parentMeleeList">
				<Size>
					<AbsDimension x="163" y="162" />
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentTankList" />
				</Anchors>
				<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
				</Backdrop>
			</Frame>
			<!-- Queued ranged frame -->
			<Frame name="$parentRangedList">
				<Size>
					<AbsDimension x="163" y="162" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="17" y="-250" />
						</Offset>
					</Anchor>
				</Anchors>
				<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
				</Backdrop>
			</Frame>
			<!-- Queued healers frame -->
			<Frame name="$parentHealerList">
				<Size>
					<AbsDimension x="163" y="162" />
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentRangedList" />
				</Anchors>
				<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
				</Backdrop>
			</Frame>
			<!-- Top right corner close button -->
			<Button name="$parentTopCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="322" y="-9" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						SOTA_CloseRaidQueueUI();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
</Ui>