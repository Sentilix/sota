<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Script file="sota-options.lua" />

	<!-- Configuration frame template -->
	<Frame name="SOTA_ConfigurationFrameTemplate" parent="UIParent" toplevel="true" hidden="true" virtual="true">
		<Size>
			<AbsDimension x="384" y="512" />
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset x="312" y="-124" />
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\Spellbook\Spellbook-Icon">
					<Size>
						<AbsDimension x="58" y="58"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="10" y="-8"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="BarTopLeft" file="Interface\Spellbook\UI-SpellbookPanel-TopLeft">
					<Size>
						<AbsDimension x="256" y="256"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
				<Texture file="Interface\Spellbook\UI-SpellbookPanel-TopRight">
					<Size>
						<AbsDimension x="128" y="256"/>
					</Size>
					<Anchors>
						<Anchor point="TOPRIGHT"/>
					</Anchors>
				</Texture>
				<Texture file="Interface\Spellbook\UI-SpellbookPanel-BotLeft">
					<Size>
						<AbsDimension x="256" y="256"/>
					</Size>
					<Anchors>
						<Anchor point="BOTTOMLEFT"/>
					</Anchors>
				</Texture>
				<Texture file="Interface\Spellbook\UI-SpellbookPanel-BotRight">
					<Size>
						<AbsDimension x="128" y="256"/>
					</Size>
					<Anchors>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
				<FontString name="$parentTitle" inherits="GameFontNormal" text="SotA Options">
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="-6" y="233"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer>
				<FontString name="$parentTopText" inherits="GameFontNormal" font="Fonts\FRIZQT__.TTF" text="">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-90"/>
							</Offset>
						</Anchor>
					</Anchors>
					<FontHeight val="16" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<!-- Top right corner close button -->
			<Button name="$parentTopCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="324" y="-9" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						SOTA_CloseConfigurationUI();
					</OnClick>
				</Scripts>
			</Button>
			<!-- Lower close button -->
			<Button name="$parentCloseButton" inherits="UIPanelButtonTemplate" text="Close">
				<Size>
					<AbsDimension x="100" y="23" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="134" y="-402" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						SOTA_CloseConfigurationUI();
					</OnClick>
				</Scripts>
			</Button>
			<!-- Config 1 button -->
			<Button name="$parentConfigTabButton1" inherits="UIPanelButtonTemplate" text="Bidding">
				<Size>
					<AbsDimension x="80" y="23" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="80" y="-40" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						SOTA_OpenConfigurationFrame1();
					</OnClick>
				</Scripts>
			</Button>
			<!-- Config 2 button -->
			<Button name="$parentConfigTabButton2" inherits="UIPanelButtonTemplate" text="Boss DKP">
				<Size>
					<AbsDimension x="80" y="23" />
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentConfigTabButton1" relativePoint="LEFT">
						<Offset x="84" y="0" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						SOTA_OpenConfigurationFrame2();
					</OnClick>
				</Scripts>
			</Button>
			<!-- Config 3 button -->
			<Button name="$parentConfigTabButton2" inherits="UIPanelButtonTemplate" text="Misc DKP">
				<Size>
					<AbsDimension x="80" y="23" />
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentConfigTabButton2" relativePoint="LEFT">
						<Offset x="84" y="0" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						SOTA_OpenConfigurationFrame3();
					</OnClick>
				</Scripts>
			</Button>
			<!-- Dummy input field to claim frame focus -->
			<EditBox name="$parentDummy" letters="1" visible="false">
				<Size>
					<AbsDimension x="0" y="0"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="-200" y="-200"/>
					</Anchor>
				</Anchors>
				<FontString inherits="GameFontNormal"/>
				<Scripts>
					<OnLoad>
						this:RegisterEvent("OnEscapePressed")
					</OnLoad>
					<OnEscapePressed>
						SOTA_CloseConfigurationUI();
					</OnEscapePressed>
				</Scripts>
			</EditBox>
		</Frames>
	</Frame>

	<!-- Boss DKP slider (config element for Boss DKP)  -->
	<Slider name="SOTA_BossDKPSlider" minValue="0" maxValue="4000" defaultValue="400" valueStep="100" inherits="OptionsSliderTemplate" virtual="true">
		<Size>
			<AbsDimension x="300" y="14" />
		</Size>
		<Scripts>
			<OnLoad>
				getglobal(this:GetName().."Low"):SetText("0")
				getglobal(this:GetName().."High"):SetText("4000")
			</OnLoad>
			<OnValueChanged>
				SOTA_OnOptionBossDKPChanged(this);
			</OnValueChanged>
		</Scripts>
	</Slider>

	<!-- template for a "dropdown" combo box -->
	<Frame name="SOTA_DropDownTemplate" inherits="UIDropDownMenuTemplate" hidden="true" virtual="true">
		<Size>
			<AbsDimension x="200" y="32"/>
		</Size>
		<Anchors>
			<Anchor point="LEFT">
				<Offset>
					<AbsDimension x="4" y="-4"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
			<OnLoad>
				SOTA_DropDown_OnLoad(this);
			</OnLoad>
		</Scripts>
	</Frame>



	<!--	Configuration Frame, tab 1: Bid Settings -->
	<Frame name="ConfigurationFrame" parent="UIParent" toplevel="true" hidden="true" inherits="SOTA_ConfigurationFrameTemplate">
		<Frames>
			<!-- Configuration Frame 1: Auction Timing -->
			<!-- Auction Timer, nominal time -->
			<Slider name="ConfigurationFrameOptionAuctionTime" minValue="0" maxValue="60" defaultValue="25" valueStep="1" inherits="OptionsSliderTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="64" y="-124"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="250" y="14" />
				</Size>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Low"):SetText("0")
						getglobal(this:GetName().."High"):SetText("60")
					</OnLoad>
					<OnValueChanged>
						SOTA_OnOptionAuctionTimeChanged(this);
					</OnValueChanged>
				</Scripts>
			</Slider>
			<!-- Auction Extension time -->
			<Slider name="ConfigurationFrameOptionAuctionExtension" minValue="0" maxValue="20" defaultValue="8" valueStep="1" inherits="OptionsSliderTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="64" y="-156"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="250" y="14" />
				</Size>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Low"):SetText("0")
						getglobal(this:GetName().."High"):SetText("60")
					</OnLoad>
					<OnValueChanged>
						SOTA_OnOptionAuctionExtensionChanged(this);
					</OnValueChanged>
				</Scripts>
			</Slider>
			<!-- Enable MS/OS bidding (MS>OS) ? -->
			<CheckButton name="ConfigurationFrameOptionMSoverOSPriority" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-198"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Enable MS/OS bidding (Mainspec over Offspec)")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<!-- Enable Zone Check for Raid Queue -->
			<CheckButton name="ConfigurationFrameOptionEnableZonecheck" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-224"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Enable Raid Queue Zone Check")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<!-- Enable Online Check -->
			<CheckButton name="ConfigurationFrameOptionEnableOnlinecheck" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-250"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Enable Raid Queue Online Check")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<!-- Allow players to Pass ? -->
			<CheckButton name="ConfigurationFrameOptionAllowPlayerPass" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-276"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Allow players to pass")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<!-- Disable Dashboard ? -->
			<CheckButton name="ConfigurationFrameOptionDisableDashboard" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-302"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Disable (hide) Dashboard")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<!-- Target channel combo box -->
			<Frame name="ConfigurationFrameOptionChannel">
				<Size>
					<AbsDimension x="20" y="250" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="32" y="-334" />
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<!-- Caption -->
						<FontString name="$parentCaption" justifyH="LEFT" inherits="GameFontNormal">
							<Size>
								<AbsDimension x="130" y="20"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset>
										<AbsDimension x="32" y="-2"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

			<!-- Configuration Frame 2: Boss DKP -->
			<!-- 20 mans (ZG, AQ20) -->
			<Slider name="ConfigurationFrameOption_20Mans" inherits="SOTA_BossDKPSlider">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="28" y="-124"/>
					</Anchor>
				</Anchors>
			</Slider>
			<!-- Molten Core -->
			<Slider name="ConfigurationFrameOption_MoltenCore" inherits="SOTA_BossDKPSlider">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="28" y="-156"/>
					</Anchor>
				</Anchors>
			</Slider>
			<!-- Onyxia -->
			<Slider name="ConfigurationFrameOption_Onyxia" inherits="SOTA_BossDKPSlider">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="28" y="-188"/>
					</Anchor>
				</Anchors>
			</Slider>
			<!-- Blackwing Lair -->
			<Slider name="ConfigurationFrameOption_BlackwingLair" inherits="SOTA_BossDKPSlider">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="28" y="-220"/>
					</Anchor>
				</Anchors>
			</Slider>
			<!-- AQ40 -->
			<Slider name="ConfigurationFrameOption_AQ40" inherits="SOTA_BossDKPSlider">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="28" y="-252"/>
					</Anchor>
				</Anchors>
			</Slider>
			<!-- Naxxramas -->
			<Slider name="ConfigurationFrameOption_Naxxramas" inherits="SOTA_BossDKPSlider">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="28" y="-284"/>
					</Anchor>
				</Anchors>
			</Slider>
			<!-- World Bosses -->
			<Slider name="ConfigurationFrameOption_WorldBosses" inherits="SOTA_BossDKPSlider">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="28" y="-316"/>
					</Anchor>
				</Anchors>
			</Slider>
			<!-- Configuration Frame 3: Misc. DKP -->
			<!-- Public Guild Notes, options: 0, 1 -->
			<CheckButton name="ConfigurationFrameOptionPublicNotes" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-110"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Store DKP in Public Guild Notes")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<!-- Minimum Mid Strategy, options: 0, 1, 2, 3 -->
			<CheckButton name="ConfigurationFrameOptionMinBidStrategy0" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-154"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("No minimum bid rules")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="ConfigurationFrameOptionMinBidStrategy1" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-176"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Minimum increase by 10 DKP")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="ConfigurationFrameOptionMinBidStrategy2" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-198"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("Minimum increase by 10%")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="ConfigurationFrameOptionMinBidStrategy3" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="32" y="-220"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText("GGC Rules (0-200: +10, &gt;200: +50, &gt;1k: +100)")
					</OnLoad>
					<OnClick>
						SOTA_HandleCheckbox(this);
					</OnClick>
				</Scripts>
			</CheckButton>
			<!-- DKP String Length, options: 0-8 -->
			<Slider name="ConfigurationFrameOptionDKPStringLength" minValue="0" maxValue="8" defaultValue="5" valueStep="1" inherits="OptionsSliderTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="64" y="-270"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="250" y="14" />
				</Size>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Low"):SetText("0")
						getglobal(this:GetName().."High"):SetText("8")
					</OnLoad>
					<OnValueChanged>
						SOTA_OnOptionDKPStringLengthChanged(this);
					</OnValueChanged>
				</Scripts>
			</Slider>
			<!-- Minimum DKP Penalty, options: 0 - 500, step 10 -->
			<Slider name="ConfigurationFrameOptionMinimumDKPPenalty" minValue="0" maxValue="500" defaultValue="50" valueStep="10" inherits="OptionsSliderTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="64" y="-314"/>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="250" y="14" />
				</Size>
				<Scripts>
					<OnLoad>
						getglobal(this:GetName().."Low"):SetText("0")
						getglobal(this:GetName().."High"):SetText("500")
					</OnLoad>
					<OnValueChanged>
						SOTA_OnOptionMinimumDKPPenaltyChanged(this);
					</OnValueChanged>
				</Scripts>
			</Slider>
		</Frames>
		
		<Scripts>
			<OnLoad>
				this:SetMovable(true)
				this:SetUserPlaced(true)
				this:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart>
				this:StartMoving()
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>